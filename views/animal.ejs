<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/styles3.css">
</head>
<body>
    <section class="banner">
        <header>
            <a href="#" class="logo">Tails<span>Scales</span></a>
            <div class="toggle"></div>
        </header>
        <div class="content">
            <h1><%= pet.name %></h1>
            <p><%= pet.breed %></p>
            <p><%= pet.age %></p>
            <p><%= pet.description %></p>
            <p><%= pet.behavior %></p>
            <p><%= pet.history %></p>
            <img src="<%= pet.image %>" alt="pet's image">
            <form action="/api/v1/adopt/newComment/<%= pet.id %>" method="POST">
                <label>Comment on pet</label>
                <textarea name="contact" id="contact"></textarea>
                <input type="submit" name="" id="">
            </form>
            <form action="/pets">
                <input type="submit" value="Back to pets">
            </form>
            <% pet.contact.forEach(con => { %>
                <div style="background-color: rgb(0, 242, 255); margin: 10px; border-radius: 10px;">
                    <p><%= con %></p>
                </div>
            <% }) %>
        </div>
        <ul class="sci">
            <li><a href="https://www.facebook.com"><img src="/facebook.png"></a></li>
            <li><a href="#"><img src="/twitter.png"></a></li>
            <li><a href="https://www.instagram.com"><img src="/instagram.png"></a></li>
        </ul>
        <ul class="menu">
            <li><a href="/index">Home</a></li>
            <li><a href="/pets/new">Donate Pets</a></li>
            <li><a href="/pets">gallery</a></li>
            <li><a href="/">logout</a></li>
        </ul>
        </section>
        <script>
        let banner = document.querySelector('.banner');
        let menutoggle = document.querySelector('.toggle');
        menutoggle.onclick = function(){
            menutoggle.classList.toggle('active');
            banner.classList.toggle('active');
        }
        </script>

</body>
</html>